<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_box"
    android:backgroundTint="@color/charcoal"
    android:paddingBottom="12dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/text_dialog_image"
        android:layout_width="match_parent"
        android:backgroundTint="@color/spruce"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:background="@drawable/toproundview"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_locknkey"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_dialog_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/need_your_credentials_to_proceed"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_dialog_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="This action requires your verification to proceed."
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cred_credview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:layout_height="80dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_gravity="center"
            android:textColorHint="@color/edittextcolor"
            android:padding="4dp">
            <EditText
                android:id="@+id/dialog_text"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_margin="12dp"
                android:layout_height="80dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/edittextcolor"
                android:backgroundTint="@color/white"
                android:inputType="textEmailAddress"
                android:hint="@string/email_id"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="13dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/text_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="@color/dark_blue"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/raleway"
            android:padding="12dp"
            android:textStyle="bold"
            android:text="Submit"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="@color/spruce"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/raleway"
            android:padding="12dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
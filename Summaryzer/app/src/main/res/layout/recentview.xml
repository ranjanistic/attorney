<?xml version="1.0" encoding="utf-8"?>
    <merge xmlns:app="http://schemas.android.com/apk/res-auto">
        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="3500dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="16dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/recent1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="32dp"
                    app:cardBackgroundColor="?attr/foreground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="24dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="32dp"
                    app:cardBackgroundColor="?attr/foreground"
                    app:cardCornerRadius="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/foreground" />

                <ImageButton
                    android:id="@+id/homescrollbutt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="100dp"
                    android:padding="50dp"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="?attr/imageButtonColor"
                    android:rotation="-90"
                    app:srcCompat="@drawable/ic_arrowright"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </merge>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_box"
    android:backgroundTint="?attr/basebackground"
    android:paddingBottom="12dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/choice_dialog_image"
        android:layout_width="match_parent"
        android:backgroundTint="?attr/foreground"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:background="@drawable/toproundview"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_locknkey"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/choice_dialog_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/need_your_credentials_to_proceed"
            android:textColor="?attr/textcolor"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cred_credview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radiogroup"
            android:padding="22dp">
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="?attr/textcolor"
                android:textColor="?attr/textcolor"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Dark theme (Default)" />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="?attr/textcolor"
                android:textColor="?attr/textcolor"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:padding="8dp"
                android:textSize="16sp"
                android:text="Light theme" />
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="?attr/textcolor"
                android:textColor="?attr/textcolor"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="Toon theme (beta)" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="13dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/choice_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="?attr/buttoncolor"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:textStyle="bold"
            android:text="Done"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?attr/buttontextcolor" />

        <Button
            android:id="@+id/choice_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/square_btn"
            android:backgroundTint="@color/spruce"
            android:clickable="true"
            android:focusable="true"

            android:padding="12dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>